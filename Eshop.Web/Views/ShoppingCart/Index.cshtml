@model Eshop.Web.Models.DTO.ShoppingCartDto

<div class="container">
    <div class="row m-3">
        <a asp-action="OrderNow" class="btn btn-success">Order Now</a>
    </div>
    <div class="row m-5">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Movie Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Sum</th>
                    <th scope="col"></th>


                </tr>
            </thead>
            <tbody>
                @if (Model.Tickets.Count == 0)
                {
                  <tr>
                      <td colspan="5">No active Products</td>
                  </tr> 
                }
                else
                {
                    @for (int i = 0; i < Model.Tickets.Count; i++)
                    {
                        var item = Model.Tickets[i];
                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.Ticket.MovieName</td>
                            <td>@item.Ticket.Price</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Ticket.Price * item.Quantity)</td>
                            <td><a asp-route-productId="@item.TicketId" asp-action="DeleteProductFromShoppingCart" class="btn btn-danger">Delete</a></td>
                        </tr>
                    }
                }
             </tbody>

            <tfoot>
                <tr>
                    <th scope="col">Total Price: </th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col">@Model.TotalPrice</th>
                </tr>
            </tfoot>

        </table>
    </div>
</div>